generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid(4)) @db.Uuid
  name     String @db.VarChar(64)
  email    String @unique @db.VarChar(128)
  password String @db.Text
}
